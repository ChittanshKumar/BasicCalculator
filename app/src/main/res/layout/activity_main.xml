<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F5F3EF">

    <TextView
        android:id="@+id/calc_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="32dp"
        android:textAlignment="textEnd"
        android:textColor="#212121"
        android:layout_above="@id/result_tv"
        android:layout_margin="16dp"
        android:background="#FFFFFF"/>

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        android:textAlignment="textEnd"
        android:textColor="#212121"
        android:layout_above="@id/button_layout"
        android:layout_margin="16dp"
        android:background="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_layout"
        android:orientation="vertical"
        android:paddingVertical="16dp"
        android:layout_alignParentBottom="true"
        android:background="#E5DED5">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_clear"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#A26769"
                android:text="C"
                android:textColor="#FAFAFA"
                android:textSize="32dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_bracketopen"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#8A6E6E"
                android:text="("
                android:textColor="#FAFAFA"
                android:textSize="32dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_bracketclose"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#8A6E6E"
                android:text=")"
                android:textColor="#FFFFFF"
                android:textSize="32dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#7D5A50"
                android:text="/"
                android:textColor="#FFFFFF"
                android:textSize="32dp"
                app:cornerRadius="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#645C54"
                android:text="7"
                android:textColor="#FAFAFA"
                android:textSize="32dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#645C54"
                android:text="8"
                android:textColor="#FAFAFA"
                android:textSize="32dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#645C54"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="32dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#7D5A50"
                android:text="*"
                android:textColor="#FFFFFF"
                android:textSize="32dp"
                app:cornerRadius="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#645C54"
                android:text="4"
                android:textColor="#FAFAFA"
                android:textSize="32dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#645C54"
                android:text="5"
                android:textColor="#FAFAFA"
                android:textSize="32dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#645C54"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="32dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#7D5A50"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                app:cornerRadius="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#645C54"
                android:text="1"
                android:textColor="#FAFAFA"
                android:textSize="32dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#645C54"
                android:text="2"
                android:textColor="#FAFAFA"
                android:textSize="32dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#645C54"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="32dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#7D5A50"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                app:cornerRadius="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_allclear"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#A26769"
                android:text="AC"
                android:textColor="#FAFAFA"
                android:textSize="18dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#645C54"
                android:text="0"
                android:textColor="#FAFAFA"
                android:textSize="32dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#645C54"
                android:text="."
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equals"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:backgroundTint="#006D77"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                app:cornerRadius="12dp" />
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>